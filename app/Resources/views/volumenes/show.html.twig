{% extends 'base.html.twig' %}

{% block body %}
    <h1>Volumene</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ volumene.id }}</td>
            </tr>
            <tr>
                <th>Idafiliado</th>
                <td>{{ volumene.idafiliado }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ volumene.monto }}</td>
            </tr>
            <tr>
                <th>Pv</th>
                <td>{{ volumene.pv }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if volumene.fecha %}{{ volumene.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('volumenes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('volumenes_edit', { 'id': volumene.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
